@model SignInViewModel;

@{
    ViewData["Title"] = "Sign in";
}

<section class="signin">
    <div class="container">
        <form class="form-signin" method="post" asp-controller="Auth" asp-action="SignIn">
            <h1>Welcome Back</h1>
            <p>Don't have an account? <a class="a2" asp-controller="Auth" asp-action="SignUp">Sign up here</a></p>

            @if (!string.IsNullOrEmpty(ViewData["StatusMessage"]?.ToString()))
            {
                <div>
                    @ViewData["StatusMessage"]
                </div>
            }
           
            <div class="form-content">
                <div class="input-group">
                    <label class="input-label" asp-for="Email"></label>
                    <input asp-for="Email" />
                </div>

                <div class="input-group">
                    <label class="input-label" asp-for="Password"></label>
                    <input asp-for="Password" />
                </div>

                <div class="checkbox-group">
                    <div class="input-group">
                        <input asp-for="RememberMe" />
                        <label asp-for="RememberMe">
                            Remember Me
                        </label>
                    </div>
                </div>

                <button class="btn btn-theme" type="submit">Sign in</button>

            </div>

            <p><a class="a2 forgot" asp-controller="Auth" asp-action="SignUp">Forgot your password?</a></p>
        </form>
    </div>
</section>