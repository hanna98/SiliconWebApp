@{
    var theme = Context.Request.Cookies["theme"] ?? "light";
    var isDarkMode = (theme == "dark") ? true : false;

    var user = await UserManager.GetUserAsync(User);
} 

<header>

    <div class="container">
        <a asp-action="Home" asp-controller="Default" class="logo"><img src="/images/logos/logo-@(theme).svg" alt="Silicon"></a>
        <nav class="nav-menu">
            <a asp-action="Home" asp-controller="Default" class="nav-link @Html.ActiveClass("Default", "Home")">Overview</a>

            @if (SignInManager.IsSignedIn(User))
            {
                <a asp-action="Index" asp-controller="Courses" class="nav-link @Html.ActiveClass("Courses", "Index")">Courses</a>
            }
            else
            {
                <a href="#features" class="nav-link">Features</a>
            }

            <a asp-action="Index" asp-controller="Contact" class="nav-link @Html.ActiveClass("Contact", "Index")">Contact</a>
        </nav>

        <div id="theme-switch" class="theme-switch">
            <label class="dark-light-switch-label light-mode-label">Light</label>
            <label class="switch" for="switch-mode">
                <input id="switch-mode" type="checkbox" checked="@isDarkMode">
                <span class="slider round"></span>
            </label>
            <label class="dark-light-switch-label dark-mode-label">Dark</label>
        </div>

        <div class="account-buttons">
            @if (SignInManager.IsSignedIn(User) && user != null)
            {
                <div class="profile">
                    <div class="image">
                        <a asp-action="Details" asp-controller="Account">
                            <img src="@Configuration["FilePath:ProfileImagePath"]/@user.ProfileImage" alt="profile image" />
                        </a>
                    </div>
                </div>
            }
            else
            {
                <a class="btn btn-secondary" asp-action="SignIn" asp-controller="Auth"> <i class="fa-regular fa-arrow-right-to-bracket"></i>Sign in</a>
                <a class="btn btn-theme" asp-action="SignUp" asp-controller="Auth"> <i class="fa-regular fa-user"></i>Sign up</a>
            }
        </div>

        <button class="btn btn-mobile"><i class="fa-regular fa-bars"></i></button>
    </div>
</header>
